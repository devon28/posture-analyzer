<!-- results.j2 -->
{% extends "base.j2" %}

{% block content %}
    <img src="{{ image_path }}" alt="Image with lines">

      <table id="my-table">
        <thead>
          <tr>
            <th class="table-left">Condition</th>
            <th class="table-non-left">Strengthem</th>
            <th>Stretch</th>
          </tr>
        </thead>
        <tbody>
          {% for key, value in issues.items() %}
          <tr>
            <td class="table-left">{{ key }}</td>
            <td class="table-non-left">{{ value['weak'] }}</td>
            <td class="table-non-left">{{ value['tight'] }}</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
      <form action="/save_user_upload" method="post" enctype="multipart/form-data">
        <input type="hidden" name="saved_image" value="{{ image_path }}">
        <input type="hidden" name="issues" value="{{ issues }}">
        <input type="hidden" name="angleDict" value="{{ angleDict }}">
        <div class="form-display"></div>
        <input type="hidden" name="coordinateJSON" value="">
        <div class="button-container">
          <input type="submit" value="Save" id="submitButton">
        </div>
      </form>
{% endblock %}
